<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Community.GalleryWriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_weight="1"
        android:background="@drawable/content_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/galleryBack"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginTop="40dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="5"
            android:text="게시물 작성"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22dp"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/galleryWrite"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginTop="40dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

    </LinearLayout>

    <EditText
        android:id="@+id/galleryTitleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@drawable/board_title_radius"
        android:ems="10"
        android:hint="제목"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/galleryInputimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24" />

    <EditText
        android:id="@+id/galleryContentEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:background="@drawable/default_bg"
        android:ems="10"
        android:hint="내용을 입력하세요."
        android:padding="10dp" />


</LinearLayout>